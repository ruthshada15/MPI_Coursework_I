<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redaapp.CustomerSignupActivity">

    <ImageView
        android:id="@+id/customerprofilepicture"
        android:layout_width="wrap_content"
        android:layout_height="189dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="82dp"
        app:srcCompat="@drawable/dp" />

    <EditText
        android:id="@+id/txtcustomerfname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/customerprofilepicture"
        android:layout_marginStart="48dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="269dp"

        android:ems="10"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtcustomerlname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtcustomerfname"
        android:layout_marginStart="48dp"
        android:layout_marginTop="-230dp"

        android:ems="10"
        android:hint="Last Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtcustomerphonenumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtcustomerlname"
        android:layout_alignParentTop="true"

        android:layout_marginStart="48dp"
        android:layout_marginTop="450dp"

        android:ems="10"
        android:hint="Phone Number"

        android:inputType="phone" />


    <Button
        android:id="@+id/btngetstarted"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtcustomerphonenumber"
        android:layout_marginStart="120dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="150dp"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="58dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="You still need to provide these Informations"
        android:textAlignment="center" />

</RelativeLayout>