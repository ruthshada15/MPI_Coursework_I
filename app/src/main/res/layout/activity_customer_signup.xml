<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redaapp.CustomerSignupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/customerprofilepicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="95dp"
        app:srcCompat="@drawable/dp"
        android:src="@drawable/dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ff8040"/>

    <EditText
        android:id="@+id/txtcustomerfname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/customerprofilepicture"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="269dp"

        android:ems="10"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtcustomerlname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtcustomerfname"

        android:layout_marginTop="-250dp"

        android:ems="10"
        android:hint="Last Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtcustomerphonenumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtcustomerlname"
        android:layout_alignParentTop="true"


        android:layout_marginTop="350dp"

        android:ems="10"
        android:hint="Phone Number"

        android:inputType="phone" />

    <EditText
        android:id="@+id/signuptxtemail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/customerprofilepicture"

        android:layout_marginTop="200dp"

        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName|textEmailAddress" />


    <EditText
        android:id="@+id/signuptxtpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/signuptxtemail"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="269dp"

        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />



    <EditText
        android:id="@+id/txtcustomerconfirmpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/signuptxtpassword"

        android:layout_marginTop="-260dp"
        android:layout_marginBottom="269dp"

        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btngetstarted"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtcustomerconfirmpassword"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-250dp"
        android:layout_marginBottom="150dp"
        android:background="@color/colorPrimary"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="25sp" />

</RelativeLayout>